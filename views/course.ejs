<!DOCTYPE html>    
<div class='container'>
% if (courses.length<1) { %>
			<p>You have not been enrolled in any course.</p>
			<br>
				<br>
					<a type="button" href="/course" class="btn btn-primary">Add Unit of Study</a>
		<% } else {%>
			<a type="button" href="/course" class="btn btn-primary" style="float: right;">Edit Unit of Study</a>
			<br><br>
		<table class='table table-striped table-bordered table-hover'>
			<tr>
				<th>Unit Code</th>
				<th>Name</th>
				<th>Credit Points</th>
			</tr>
			<% _.each(courses, function(course) { %>
			<tr>
				<td><%= course.unit_code %></td>
				<td><%= course.name %></td>
				<td><%= course.credit_points %></td>	
				<td>
					<form action="/course/delete" method="post">
						<input type="hidden" name="unit_code" value="<%=course.unit_code %>"/>
						<button type="submit" class="btn btn-default">Delete</button>
					</form>
				</td>
			</tr>
			<% }) %>
		</table>
		<% } %>
	</div>


	<form action="course/search" method="get" class="form-inline" role="form"> 
  		<div class="input-group">
    		<input type="search" class="form-control" name="unit_code">
      		<span class="input-group-btn">
        		<button type="submit" class="btn btn-default">
          			<span class="glyphicon glyphicon-search"></span>
        		</button>
      		</span>
  		</div>
	</form>
</div>
