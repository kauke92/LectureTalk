<!DOCTYPE html>
<% if(flash && flash.err) { %>
        <ul class="alert alert-success">
        <% Object.keys(flash.err).forEach(function(error) { %>
        <li><%- JSON.stringify(flash.err[error]) %></li>
         <% }) %>
        </ul>
<% } %>

<div class="container">

  <h2>You are editing profile</h2>
  <br>
  <form role="form" action="/student/update/<%=student.id%>" method="POST">
     <div class="form-group">
     <label>First Name</label>
     <input value="<%=student.first_name%>" name="first_name" type ="text" class="form-control"/>
     </div>

     <div class="form-group">
     <label>Last Name</label>
     <input value="<%=student.last_name%>" name="last_name" type ="text" class="form-control"/>
     </div>

     <div class="form-group">
     <label>Degree</label>
     <input value="<%=student.degree%>" name="degree" type ="text" class="form-control"/>
     </div>

     <div class="form-group">
     <label>Email</label>
     <% if (session.authenticated && session.Student.admin) { %>
      <!--  <input value="<%=student.email%>" name="email" type ="text" class="col-xs-6"/> -->
      <p > <%=student.email%></p> 
     <% } else { %>
       <p> <%=student.email%></p> 
       <input value="<%=student.email%>" name="email" type ="hidden" class="form-control"/>
     <% } %> 
     </div>

     <div class="form-group">
     <input type="submit" value="Proceed" class="btn btn-primary center"/>
     </div>
  </form>
</div>